<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/updateMahasiswaHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:fontFamily="@font/poppins_medium"
        android:text="Perbarui data Mahasiswa"
        android:textColor="@color/ungu"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/updatesaveButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        app:tint ="@color/ungu"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/updateNamaEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Masukkan Nama"
        android:background="@drawable/violet_border"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_margin="12sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/updateMahasiswaHeading"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/updateNimEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Masukkan Nim"
        android:background="@drawable/violet_border"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_margin="12sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/updateNamaEt"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/updateJurusanEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Masukkan Jurusan"
        android:background="@drawable/violet_border"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_margin="12sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/updateNimEt"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"/>

</RelativeLayout>